                                    <StackPanel Margin="5,3,0,0" Orientation="Horizontal" Width="Auto" HorizontalAlignment="Stretch">
                                        <TextBlock HorizontalAlignment="Left" Height="Auto" Width="70" TextWrapping="Wrap" Text="Start Time:" FontSize="12" />
                                        <telerik:RadTimePicker Name="dtpickerFrom" HorizontalAlignment="Left" Margin="5,0,0,0" Height="Auto" Width="100" FontSize="12"  TimeInterval="0:30:0"/>
                                        <TextBlock Margin="10,0,0,0" HorizontalAlignment="Left" Height="Auto" TextWrapping="Wrap" FontSize="12"  Text="End Time:" Width="Auto"/>
                                        <telerik:RadTimePicker  Name="dtpickerTo" HorizontalAlignment="Left" Margin="5,0,0,0" Height="Auto" Width="100" FontSize="12" TimeInterval="0:30:0"/>
                                    </StackPanel>
                                    <StackPanel  Margin="5,4,0,0" Orientation="Horizontal" Width="Auto" HorizontalAlignment="Stretch">
                                        <TextBlock HorizontalAlignment="Left" Height="Auto" TextWrapping="Wrap" Text="Event Title:" FontSize="12" Width="65"/>
                                        <TextBox Name="textboxEventTitle" Text="{Binding Title}" Margin="10,0,0,0" Height="Auto" Width="Auto"  MinWidth="300" HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                    <StackPanel  Margin="5,2,0,0" Orientation="Horizontal" Width="Auto" HorizontalAlignment="Stretch">
                                        <TextBlock HorizontalAlignment="Left" Height="Auto" TextWrapping="Wrap" Text="Description:" FontSize="12" Width="65"/>
                                        <TextBox Name="textboxEventDescription" Text="{Binding Description}" Margin="10,0,0,0" Height="Auto" Width="Auto" MinWidth="300" HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                    <StackPanel  Margin="5,4,0,0" Orientation="Horizontal" Width="Auto" HorizontalAlignment="Stretch">
                                        <TextBlock HorizontalAlignment="Left" Height="Auto" TextWrapping="Wrap" Text="Event Logo:" FontSize="12" Width="65"/>
                                        <Border Margin="10,0,0,0" Width="50" Height="50" BorderBrush="DimGray"  BorderThickness="0.5">
                                            <Image Source="{Binding Eventlogoblob}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                        </Border>
                                        <StackPanel Orientation="Vertical">
                                            <Button Name="btnClearLogo" Margin="4,0,0,0" Content="Clear" Click="btnClearLogo_Click"/>
                                            <Button Name="btnChangeLogo" Margin="4,2,0,0" Content="Change" Click="btnChangeLogo_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Right" Margin="17,0,5,5" Orientation="Horizontal" VerticalAlignment="Bottom" Height="30">
                                    <Button x:Name="btnCancelAddEditEvent" Height="29" Width="80" Margin="5,0,0,0" Click="btnCancelAddEditEvent_Click">
                                        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" Width="Auto" Height="Auto" Margin="0,0,0,0">
                                            <Image Source="Images/Cancel.png" Margin="-7,1,3,0">
                                                <Image.BitmapEffect>
                                                    <DropShadowBitmapEffect ShadowDepth="2" Softness="0" Opacity="0.8" />
                                                </Image.BitmapEffect>
                                            </Image>
                                            <TextBlock VerticalAlignment="Center">Cancel</TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="btnApplyAddEditEvent" Height="29" Width="80" Margin="5,0,0,0" Click="btnApplyAddEditEvent_Click">
                                        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" Width="Auto" Height="Auto" Margin="0,0,0,0">
                                            <Image Source="Images/Tick.png" Margin="-7,1,3,0">
                                                <Image.BitmapEffect>
                                                    <DropShadowBitmapEffect ShadowDepth="2" Softness="0" Opacity="0.8" />
                                                </Image.BitmapEffect>
                                            </Image>
                                            <TextBlock VerticalAlignment="Center">Apply</TextBlock>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border x:Name="borderAddEditEventInstruction" BorderThickness="0" Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Visible">
                            <Grid >

                            </Grid>
                        </Border>
                    </Grid>
                </de:StateAnimationControl>

            </Grid>
        </m:MetroTabItem>
