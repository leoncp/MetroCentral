<m:MetroAppWindow
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:m="clr-namespace:DevComponents.WPF.Metro;assembly=DevComponents.WPF.Metro"
    xmlns:ctrls="clr-namespace:DevComponents.WPF.Controls;assembly=DevComponents.WPF.Controls"
    xmlns:de="clr-namespace:DevComponents.WpfEditors;assembly=DevComponents.WpfEditors"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" xmlns:il="clr-namespace:Microsoft.Expression.Interactivity.Layout;assembly=Microsoft.Expression.Interactions"
    xmlns:kb="http://kent.boogaart/controls" 
    xmlns:Custom="http://schemas.componentone.com/wpf/C1Extended" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="MetroCentral.MainWindow"
	mc:Ignorable="d" 
	Title="iTactix Conferencing"
	Height="630" Width="880"
	ResizeMode="CanResizeWithGrip"
    Loaded="MetroAppWindow_Loaded" WindowStartupLocation="CenterScreen"
    m:MetroUI.Theme="{x:Static m:MetroTheme.Cherry}"
    x:Name="mainAppWindow" Margin="0,0,0,8" MinWidth="785" MinHeight="575" Icon="MetroIcon.ico"
    >

    <m:MetroAppWindow.Resources>
        <Style x:Key="StretchedContainerStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
        <DataTemplate x:Key="datatemplateUser">
            <StackPanel Orientation="Horizontal">
                <Image Source="Images/UserWhite.png" Width="35">
                    <Image.BitmapEffect>
                        <DropShadowBitmapEffect ShadowDepth="3" Softness="0"  Opacity="0.8"/>
                    </Image.BitmapEffect>
                </Image>
                <TextBlock Text="UserID:  " Margin="5,0,0,0" Width="Auto" FontWeight="Bold" FontSize="14" VerticalAlignment="Bottom" Opacity="0.7"/>
                <TextBlock Text="{Binding Loginid}"  Width="100"  TextTrimming="CharacterEllipsis" FontSize="14" VerticalAlignment="Bottom"/>
                <TextBlock Text="Name:  "  Width="Auto" FontWeight="Bold" FontSize="14" VerticalAlignment="Bottom" Opacity="0.7"/>
                <TextBlock Text="{Binding Fullname}"  TextTrimming="CharacterEllipsis" Width="180"  FontSize="14" VerticalAlignment="Bottom"/>
                <TextBlock Text="User Level:  " Width="Auto" FontWeight="Bold"  FontSize="14" VerticalAlignment="Bottom" Opacity="0.7"/>
                <TextBlock Text="{Binding Groupid}"  Width="Auto" TextTrimming="CharacterEllipsis"  FontSize="14" VerticalAlignment="Bottom"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="datatemplateDisplay">
            <StackPanel Orientation="Horizontal">
                <Image Source="Images/Computer64.png" Width="32">
                    <Image.BitmapEffect>
                        <DropShadowBitmapEffect ShadowDepth="3" Softness="0"  Opacity="0.8"/>
                    </Image.BitmapEffect>
                </Image>
                <TextBlock Text="PC:" Margin="3,0,0,0" Width="Auto" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"  Opacity="0.7"/>
                <TextBlock Text="{Binding Computername}" Margin="4,0,0,0"  Width="125"  TextTrimming="CharacterEllipsis" FontSize="14" VerticalAlignment="Center"/>
                <TextBlock Text="Title:" Margin="10,0,0,0"  Width="Auto" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Opacity="0.7"/>
                <TextBlock Text="{Binding Screenlocation}" Margin="4,0,0,0"  TextTrimming="CharacterEllipsis" Width="105"  FontSize="14" VerticalAlignment="Center"/>
                <TextBlock Text="Logical Screen #: " Margin="10,0,0,0" Width="Auto" FontWeight="Bold"  FontSize="14" VerticalAlignment="Center" Opacity="0.7"/>
                <TextBlock Text="{Binding Screennumber}"  Width="20" TextTrimming="CharacterEllipsis"  FontSize="14" VerticalAlignment="Center"/>
                <TextBlock Text="Directional: " Width="Auto" Margin="15,0,0,0" FontWeight="Bold"  FontSize="14" VerticalAlignment="Center" Opacity="0.7"/>
                <TextBlock Text="{Binding Isdirectional}"  Width="Auto" TextTrimming="CharacterEllipsis"  FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="datatemplateVenue">
            <StackPanel Orientation="Horizontal">
                <Image Source="Images/Monitor.png" Width="32">
                    <Image.BitmapEffect>
                        <DropShadowBitmapEffect ShadowDepth="1" Softness="0"  Opacity="1"/>
                    </Image.BitmapEffect>
                </Image>
                <TextBlock Text="Venue:  " Margin="10,0,0,0"  Width="Auto" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"  Opacity="0.7"/>
                <TextBlock Text="{Binding Screenlocation}"  TextTrimming="CharacterEllipsis" Width="Auto" HorizontalAlignment="Stretch"  FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="datatemplateEvent">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <Image Source="Images/HourGlass64.png" Margin="0,-2,0,0" Width="32" VerticalAlignment="Top" HorizontalAlignment="Center">
                    <Image.BitmapEffect>
                        <DropShadowBitmapEffect ShadowDepth="2" Softness="0"  Opacity="0.8"/>
                    </Image.BitmapEffect>
                </Image>
                <StackPanel Margin = "0,-1,0,0" Orientation="Vertical" Height="Auto" Width="Auto" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                    <StackPanel Margin = "1,1,0,0"  Orientation="Horizontal" Height="Auto">
                        <!--<Label Content="S:" Margin="4,0,0,0"  Width="18" HorizontalContentAlignment="Right" FontSize="14" VerticalAlignment="Center" FontStyle="Italic"  Opacity="0.7"/>-->
                        <Canvas Width="Auto" Height="Auto" Margin="5,3,10,0">
                            <Path Width="10" Height="10" Stretch="Fill" Fill="#FF00C800" Data="F1 M 361.844,196.419L 66.5702,26.3458L 66.9192,367.097L 361.844,196.419 Z ">
                                <Path.BitmapEffect>
                                    <DropShadowBitmapEffect ShadowDepth="2" Softness="0"  Opacity="0.8"/>
                                </Path.BitmapEffect>
                            </Path>
                        </Canvas>
                        <TextBlock Margin="4,0,0,0" Text="{Binding Eventstart, StringFormat={}{0:HH:mm}}"  TextTrimming="CharacterEllipsis" Width="Auto" HorizontalAlignment="Stretch"  FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin = "1,-2,0,0" Orientation="Horizontal" Height="Auto" VerticalAlignment="Top">
                        <Rectangle Margin="5,0,0,0" Width="8" Height="8" Fill="Red">
                            <Rectangle.BitmapEffect>
                                <DropShadowBitmapEffect ShadowDepth="2" Softness="0" Opacity="0.8" />
                            </Rectangle.BitmapEffect>
                        </Rectangle>
                        <TextBlock Margin="6,0,0,0" Text="{Binding Eventend, StringFormat={}{0:HH:mm}}"  TextTrimming="CharacterEllipsis" Width="Auto" HorizontalAlignment="Stretch"  FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin = "8,-1,0,0" Orientation="Vertical" Height="Auto" VerticalAlignment="Top" Width="Auto" HorizontalAlignment="Stretch">
                    <StackPanel Margin = "0,1,0,0" Orientation="Horizontal" Height="Auto" VerticalAlignment="Top">
                        <!--<Label Content="Event:" Margin="5,0,0,0"  Width="75" HorizontalContentAlignment="Right" FontSize="12" VerticalAlignment="Center" FontStyle="Italic"  Opacity="0.7"/>-->
                        <TextBlock Text="{Binding Title}"  TextTrimming="CharacterEllipsis" Width="Auto" HorizontalAlignment="Stretch"  FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Margin = "0,-2,0,0" Orientation="Horizontal" Height="Auto" VerticalAlignment="Top">
                        <!--<Label Content="Desc:" Margin="5,0,0,0"  Width="75" HorizontalContentAlignment="Right" FontWeight="Medium"  FontSize="12" VerticalAlignment="Center" FontStyle="Italic" Opacity="0.7"/>-->
                        <TextBlock Text="{Binding Description}"  TextTrimming="CharacterEllipsis" Width="Auto" HorizontalAlignment="Stretch"  FontSize="12" VerticalAlignment="Center" Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>
                <Border Margin="15,0,0,0" HorizontalAlignment="Stretch" BorderThickness="0" BorderBrush="{DynamicResource {x:Static m:MetroColors.TextBrushKey}}">
                    <Border.BitmapEffect>
                        <DropShadowBitmapEffect Opacity="0.4" ShadowDepth="1" Softness="0" />
                    </Border.BitmapEffect>
                    <Image Source="{Binding Eventlogoblob}" Width="32" Height="32" HorizontalAlignment="Right" VerticalAlignment="Center"/>    
                </Border>
                
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="datatemplateDirections">
            <StackPanel Orientation="Horizontal">
                <Image Source="Images/Footprint64.png" Width="35">
                    <Image.BitmapEffect>
                        <DropShadowBitmapEffect ShadowDepth="1" Softness="0"  Opacity="1"/>
                    </Image.BitmapEffect>
                </Image>
                <TextBlock Text="Directions from the " Margin="5,0,0,0" Width="Auto" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Opacity="0.7"/>
                <TextBlock Text="{Binding Directionalscreenname}"  Width="Auto"  TextTrimming="CharacterEllipsis" FontSize="14" VerticalAlignment="Center"/>
                <TextBlock Text=" Display ----&gt; " Margin="5,0,5,0"  Width="Auto" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Opacity="0.7"/>
                <TextBlock Text="{Binding Meetingroomname}" Margin="0,0,20,0"  TextTrimming="CharacterEllipsis" Width="180"  FontSize="14" VerticalAlignment="Center"/>
                <Image Source="{Binding Directionimageblob}"  Width="32" VerticalAlignment="Center" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="datatemplateMedia">
            <StackPanel Orientation="Horizontal">
                <!--<Image Source="Images/Direction.png" Width="35">
                    <Image.BitmapEffect>
                        <DropShadowBitmapEffect ShadowDepth="1" Softness="0"  Opacity="1"/>
                    </Image.BitmapEffect>
                </Image>-->
                <!--<TextBlock Text="Media: " Margin="5,0,0,0" Width="Auto" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Opacity="0.7"/>-->
                <Image Source="{Binding Mediablob}" Width="32" Height="32" />
                <TextBlock Text="{Binding Mediatype}" Margin="0,0,20,0" FontWeight="Bold" TextTrimming="CharacterEllipsis" Width="45"  FontSize="14" VerticalAlignment="Center"  Opacity="0.7"/>
                <TextBlock Text="{Binding Mediafilename}"  Width="Auto"  TextTrimming="CharacterEllipsis" FontSize="14" MaxWidth="300" VerticalAlignment="Center"/>
                <!--<TextBlock Text="Type: " Margin="5,0,5,0"  Width="Auto" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Opacity="0.7"/>-->

                <!--<Image Source="{Binding Directionimageblob}"  Width="50" VerticalAlignment="Center">
                    <Image.BitmapEffect>
                        <DropShadowBitmapEffect />
                    </Image.BitmapEffect>
                </Image>-->
            </StackPanel>
        </DataTemplate>
    </m:MetroAppWindow.Resources>
    <m:MetroShell x:Name="metroShell">
        <m:MetroShell.Chrome>
            <m:MetroChrome>
                <m:MetroChrome.QuickAccessToolBar>
                    <m:QuickAccessToolBar>
                        <ctrls:DropDownButton m:QuickAccessToolBar.DisplayName="Colors" StaysOpen="False" BorderThickness="0"
                                  Header="Change Theme" CloseOnClick="True" Width="100">
                            <ctrls:SelectableItemBox x:Name="ThemeSelectionBox" Padding="0" ItemsSource="{x:Static m:MetroTheme.PreDefinedThemes}"
                                                 SelectedValuePath="DisplayName" DisplayMemberPath="DisplayName"                                                  
                                                 MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type m:MetroAppWindow}}}"
                                                 SelectedItem="{Binding (m:MetroUI.Theme), Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type m:MetroAppWindow}}}" SelectionChanged="ThemeSelectionBox_SelectionChanged" />
                        </ctrls:DropDownButton>
                    </m:QuickAccessToolBar>
                </m:MetroChrome.QuickAccessToolBar>
                <Button Content="SETTINGS" FontSize="10" BorderThickness="0" Background="Transparent" IsEnabled="False"/>
                <Button Content="HELP" FontSize="10" BorderThickness="0" Background="Transparent" IsEnabled="False" />
            </m:MetroChrome>
        </m:MetroShell.Chrome>
        <m:MetroShell.Start>
            <m:MetroStartControl x:Name="StartControl" Orientation="Horizontal" FirstName="" LastName="" Title="Conferencing Start Menu" IsDocked="false">
                <m:MetroStartControl.TransitioningSelectorItems>
                    <ctrls:TransitioningSelectorItem x:Name="OptionsFormTemplates" Background="Red" Selected="OptionsFormTemplates_Selected">
                        <!--<Grid Background="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type m:MetroAppWindow}}}">-->
                        <Grid Background="{Binding Background, RelativeSource={RelativeSource AncestorType={x:Type m:MetroAppWindow}}}">
                            <TextBlock Margin = "10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Text="Configure Default Templates" />
                            <Button Name="btnApplyTemplateChanges" Content="Apply" Margin="0,10,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="60" Height="30" Click="btnApplyTemplateChanges_Click"/>
                            <StackPanel Orientation="Vertical" Margin="10,55,10,0" Height="Auto" Width="Auto">
                                <!--<TextBlock Margin = "0,2,0,5" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Text="All Displays:" />-->
                                <Expander Header="All Displays" Width="Auto" HorizontalAlignment="Stretch" IsExpanded="False" Foreground="{DynamicResource {x:Static m:MetroColors.TextBrushKey}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Margin="0,0,5,0" Width="100" Text="Disp B/G Col" HorizontalAlignment="Right"/>
                                        <TextBox Name="tbBackgroundCol" Margin="0,0,5,0" Width="70" />
                                        <TextBlock Margin="0,0,5,0" Width="150" Text="Direct. Align (T,C,B)" HorizontalAlignment="Right"/>
                                        <TextBox Name="tbDirectionalAlignment" Margin="0,0,5,0" Width="70" />
                                    </StackPanel>
                                </Expander>
                                <Expander Header="Directional Defaults" Width="Auto" HorizontalAlignment="Stretch" IsExpanded="False" Foreground="{DynamicResource {x:Static m:MetroColors.TextBrushKey}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Margin="0,0,5,0" Width="250" Text="Enable Flipping Between Meetings (0/1)" HorizontalAlignment="Right"/>
                                        <TextBox Name="tbFlippingEnabled" Margin="0,0,5,0" Width="15" />
                                        <TextBlock Margin="0,0,5,0" Width="160" Text="Duration between Flips(s)" HorizontalAlignment="Right"/>
                                        <TextBox Name="tbFlippingDuration" Margin="0,0,5,0" Width="30" />
                                    </StackPanel>
                                </Expander>

                                <!--<TextBlock Margin = "0,2,0,5" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Text="Venue Displays:" />-->
                                <Expander Header="Venue Displays" Width="Auto" HorizontalAlignment="Stretch" IsExpanded="False" Foreground="{DynamicResource {x:Static m:MetroColors.TextBrushKey}}">
                                    <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                        <StackPanel Orientation="Horizontal"  MinHeight="30">
                                            <TextBlock Margin="5,0,4,0" Width="70" Text="Venue Font" HorizontalAlignment="Right"/>
                                            <ComboBox Name="tbVenueFont" ItemsSource="{Binding Source={x:Static Member=Fonts.SystemFontFamilies}}" FontSize="16" Width="150">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock FontFamily="{Binding .}" Text="{Binding Source}"/>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Size" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbVenueFontSize" Margin="4,0,0,0" Width="35" />
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Font Colour" HorizontalAlignment="Right"/>
                                            <Custom:C1ColorPicker x:Name="tbVenueFontCol" Width="40" Margin="4,0,0,0" InputBackground="{x:Null}" ShowAlphaChannel="False" ShowRecentColors="True"/>
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Top Margin" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbVenuePxFromTop" Margin="4,0,0,0" Width="30" />
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="BandCol" HorizontalAlignment="Right"/>
                                            <Custom:C1ColorPicker x:Name="tbVenueBandCol" Width="40" Margin="4,0,0,0" InputBackground="{x:Null}" ShowAlphaChannel="False" ShowRecentColors="True"/>
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="BG Opacity" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbVenueBandOpacity" Margin="4,0,0,0" Width="30" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"  MinHeight="30">
                                            <TextBlock Margin="5,0,4,0" Width="70" Text="Title Font" HorizontalAlignment="Right"/>
                                            <ComboBox Name="tbTitleFont" ItemsSource="{Binding Source={x:Static Member=Fonts.SystemFontFamilies}}" FontSize="16" Width="150">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock FontFamily="{Binding .}" Text="{Binding Source}"/>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Size" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbTitleFontSize" Margin="4,0,0,0" Width="35" />
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Font Colour" HorizontalAlignment="Right"/>
                                            <Custom:C1ColorPicker x:Name="tbTitleFontCol" Width="40" Margin="4,0,0,0" InputBackground="{x:Null}" ShowAlphaChannel="False" ShowRecentColors="True"/>
                                            <!--<TextBox Name="tbTitleFontCol" Margin="4,0,0,0" Width="60" />-->
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Top Margin" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbTitlePxFromTop" Margin="4,0,0,0" Width="30" />
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="BandCol" HorizontalAlignment="Right"/>
                                            <Custom:C1ColorPicker x:Name="tbTitleBandCol" Width="40" Margin="4,0,0,0" InputBackground="{x:Null}" ShowAlphaChannel="False" ShowRecentColors="True"/>
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="BG Opacity" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbTitleBandOpacity" Margin="4,0,0,0" Width="30" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"  MinHeight="30">
                                            <TextBlock Margin="5,0,4,0" Width="70" Text="Info Font" HorizontalAlignment="Right"/>
                                            <ComboBox Name="tbInfoFont" ItemsSource="{Binding Source={x:Static Member=Fonts.SystemFontFamilies}}" FontSize="16" Width="150">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock FontFamily="{Binding .}" Text="{Binding Source}"/>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Size" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbInfoFontSize" Margin="4,0,0,0" Width="35" />
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Font Colour" HorizontalAlignment="Right"/>
                                            <Custom:C1ColorPicker x:Name="tbInfoFontCol" Width="40" Margin="4,0,0,0" InputBackground="{x:Null}" ShowAlphaChannel="False" ShowRecentColors="True"/>
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Top Margin" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbInfoPxFromTop" Margin="4,0,0,0" Width="30" />
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="BandCol" HorizontalAlignment="Right"/>
                                            <Custom:C1ColorPicker x:Name="tbInfoBandCol" Width="40" Margin="4,0,0,0" InputBackground="{x:Null}" ShowAlphaChannel="False" ShowRecentColors="True"/>
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="BG Opacity" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbInfoBandOpacity" Margin="4,0,0,0" Width="30" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"  MinHeight="30">
                                            <TextBlock Margin="5,0,4,0" Width="70" Text="Date Font" HorizontalAlignment="Right"/>
                                            <ComboBox Name="tbDateFont" ItemsSource="{Binding Source={x:Static Member=Fonts.SystemFontFamilies}}" FontSize="16" Width="150">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock FontFamily="{Binding .}" Text="{Binding Source}"/>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Size" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbDateFontSize" Margin="4,0,0,0" Width="35" />
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Font Colour" HorizontalAlignment="Right"/>
                                            <Custom:C1ColorPicker x:Name="tbDateFontCol" Width="40" Margin="4,0,0,0" InputBackground="{x:Null}" ShowAlphaChannel="False" ShowRecentColors="True"/>
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Top Margin" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbDatePxFromTop" Margin="4,0,0,0" Width="30" />
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="BandCol" HorizontalAlignment="Right"/>
                                            <Custom:C1ColorPicker x:Name="tbDateBandCol" Width="40" Margin="4,0,0,0" InputBackground="{x:Null}" ShowAlphaChannel="False" ShowRecentColors="True"/>
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="BG Opacity" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbDateBandOpacity" Margin="4,0,0,0" Width="30" />
                                            <TextBlock Margin="10,0,0,0" Width="Auto" Text="Text Opacity" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbDateTxtOpacity" Margin="4,0,0,0" Width="30" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0"  MinHeight="25">
                                            <Label Margin="5,0,0,0" Padding="0" VerticalAlignment="Top" Width="70" Content="Logo X" HorizontalAlignment="Left" HorizontalContentAlignment="Left"/>
                                            <TextBox Name="tbLogoX" Margin="4,0,0,0" Width="40" />
                                            <TextBlock Margin="8,0,0,0" Width="Auto" Text="Y" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbLogoY" Margin="4,0,0,0" Width="40" />
                                            <TextBlock Margin="8,0,0,0" Width="Auto" Text="Width" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbLogoW" Margin="4,0,0,0" Width="40" />
                                            <TextBlock Margin="8,0,0,0" Width="Auto" Text="Height" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbLogoH" Margin="4,0,0,0" Width="40" />
                                            <TextBlock Margin="8,0,0,0" Width="Auto" Text="Opacity" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbLogoOpacity" Margin="4,0,5,0" Width="40" />
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>

                                <!--<TextBlock Margin = "0,5,0,5" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Text="Directional Template (Small):" />-->
                                <Expander Header="Directional Template (Small)" Width="Auto" HorizontalAlignment="Stretch" IsExpanded="False" Foreground="{DynamicResource {x:Static m:MetroColors.TextBrushKey}}" >
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Margin="0,0,5,0" Width="70" Text="Venue Font" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbSDVenueFont" Margin="0,0,5,0" Width="60" />
                                            <TextBlock Margin="0,0,5,0" Width="100" Text="Venue Font Size" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbSDVenueFontSize" Margin="0,0,5,0" Width="40" />
                                            <TextBlock Margin="0,0,5,0" Width="100" Text="Venue Font Colour" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbSDVenueFontCol" Margin="0,0,5,0" Width="60" />
                                            <TextBlock Margin="10,0,5,0" Width="50" Text="Opacity" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbSDVenueOpacity" Margin="0,0,5,0" Width="30" />
                                            <!--<TextBlock Margin="10,0,5,0" Width="60" Text="Top Margin" HorizontalAlignment="Right"/>
                                    <TextBox Name="tbSDVenuePxFromTop" Margin="0,0,5,0" Width="30" />
                                    <TextBlock Margin="10,0,5,0" Width="50" Text="Band Col" HorizontalAlignment="Right"/>
                                    <TextBox Name="tbSDVenueBandCol" Margin="0,0,5,0" Width="50" />
                                    <TextBlock Margin="10,0,5,0" Width="50" Text="Opacity" HorizontalAlignment="Right"/>
                                    <TextBox Name="tbSDVenueBandOpacity" Margin="0,0,5,0" Width="30" />-->
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock  Margin="0,0,5,0" Width="70" Text="Title Font" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbSDTitleFont" Margin="0,0,5,0" Width="60" />
                                            <TextBlock Margin="0,0,5,0" Width="100" Text="Title Font Size" HorizontalAlignment="Right"/>
                                            <TextBox Name="tbSDTitleFontSize" Margin="0,0,5,0" Width="40" />
